<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jmbrandewie.businesscard.BusinessCard">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-5dp">

    <TextView
        android:id = "@+id/cookie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="James Cookieria!"
        android:textSize ="40dp"
        android:layout_below="@+id/cookie_image"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/cookie_image"
        android:layout_width="495dp"
        android:layout_height="213dp"

        android:laout_alignParentTop="true"
        android:src="@drawable/cookies"
        tools:layout_editor_absoluteY="-3dp"
        tools:layout_editor_absoluteX="-55dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = " Cookieria provides quality cookies on time.
                      -Open from 8am-9pm
                      -Wide range of prices"
            android:layout_below="@+id/cookie_name"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:textSize = "17dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
